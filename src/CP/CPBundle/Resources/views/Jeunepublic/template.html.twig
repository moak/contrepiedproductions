                {% endif %}

                <span class="pull-right"><strong>Dur√©e : {{ representation.duration / 60 }}h</strong></span>
<br>
                <p>
                    {{ representation.descriptionShort|raw }}
                </p>
                <br>
                <p class="pull-right"><a href="{{ path('cp_jeunepublic_view' , {'id': representation.id }) }}"><button class="btn btn-block btn-info">Plus d'info</button></a></p>
