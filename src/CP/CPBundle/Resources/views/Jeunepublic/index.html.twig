{% extends "::base.html.twig" %}

{% block body %}

    {% for representation in representations %}
    <div class="row">
        <div class="box">

            <div class="col-md-4">
                <br>
               <p class="title text-center"><strong>{{ representation.titleSecond }}</strong></p>
                <a href="{{ path('cp_jeunepublic_view' , {'id': representation.id }) }}"> <img class="img-responsive " src="{{ asset('uploads/' ~ representation.image.path) }}" alt=""></a>
            </div>
            <div class="col-md-8">
                <p class="title_second text-center">{{ representation.title }}</p>
                {% if representation.ageto == 0 %}
                    <span><h4><strong>A partir de {{ representation.agefrom }} ans</strong></h4></span>
                {% else %}
                    <span><h4><strong>Pour les {{ representation.agefrom }}-{{ representation.ageto }} ans</strong></h4></span>
                {% endif %}

                <span class="pull-right"><strong>Dur√©e : {{ representation.duration / 60 }}h</strong></span>
                <hr>
                <p>
                    {{ representation.descriptionShort|raw }}
                </p>
                <p class="pull-right"><a href="{{ path('cp_jeunepublic_view' , {'id': representation.id }) }}"><button class="btn btn-block btn-info">Plus d'info</button></a></p>
            </div>





            <div class="clearfix"></div>
        </div>
    </div>
    {% endfor %}




{% endblock %}