{% extends "::base.html.twig" %}

{% block body %}

    <div class="row">
        <div class="box">

            <h2 class="intro-text text-center">Contactez<strong> nous</strong></h2>

            <div class="col-lg-12">
                <hr>
                    <div class="row">
                        <div class="col-lg-4">
                            <b>Téléphones</b>: 06 85 81 66 30 / 06 69 94 57 29
                        </div>
                        <div class="col-lg-4">
                            <b>Email</b>: contrepiedprod@gmail.com
                        </div>
                        <div class="col-lg-4">
                            <b>Adresse</b>: 14, rue Henri Poincaré 75020 Paris
                        </div>
                    </div>
                <hr>

                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-4">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-xs-4">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-xs-4">
                            {{ form_label(form.phone) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_label(form.subject, 'Titre') }}
                            {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_label(form.body, 'Message') }}
                            {{ form_widget(form.body, {'attr': {'class': 'form-control'}}) }}
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                    </div>
                </div>



                {{ form_rest(form) }}
                {{ form_end(form) }}
                {{ form(form)}}

            </div>
        </div>
    </div>



{% endblock %}