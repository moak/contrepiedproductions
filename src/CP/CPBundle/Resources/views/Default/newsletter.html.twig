{% extends "::base.html.twig" %}

{% block body %}

    <div class="row">
        <div class="box">

            <h2 class="intro-text text-center">Newsletter</h2>

            <div class="col-lg-12">

                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_label(form.lname) }}
                            {{ form_widget(form.lname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_label(form.fname) }}
                            {{ form_widget(form.fname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-12">
                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                    </div>
                </div>




                {{ form_rest(form) }}
                {{ form_end(form) }}
                {{ form(form)}}

            </div>
        </div>
    </div>



{% endblock %}