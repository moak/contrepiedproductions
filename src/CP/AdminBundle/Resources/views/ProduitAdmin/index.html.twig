{% extends "::base_admin.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des produits</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>



    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li class="active">Produits</li>
    </ol>


    <!-- Page Content -->
    <div class="container">
        <a href="{{ path('admin_produit_add')}}"><button class="btn btn-default btn-success">Ajouter un produit</button></a>
        <hr>
        {# form_start(form, {'action': path('coc_homepage'), 'method': 'GET'}) }} #}

        <table class="table" id="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Disponible</th>
                </tr>
            </thead>
            <tbody>

            {% if produits|length != 0 %}
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.name }}</td>
                        <td>{{ produit.price }}</td>
                        <td>{{ produit.available }}</td>
                        <td>
                            <a href="{{ path('admin_produit_edit', { 'id': produit.id }) }}" class="btn btn-default btn-info">Editer</a>
                            <a href="{{ path('admin_produit_delete', { 'id': produit.id }) }}" class="btn btn-default btn-danger">Suppprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>-</td>
                    <td>0 produit trouv√©</td>
                    <td>-</td>

                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <hr>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}