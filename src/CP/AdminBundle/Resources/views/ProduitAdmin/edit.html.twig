{% extends "::base_admin.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Ajouter une date</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_agendas') }}">Agenda</a></li>
        <li class="active">Ajouter un agenda</li>
    </ol>

    <div class="container">

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.name, 'Nom du produit', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.name) }}

                <div class="col-sm-8">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.image) }}

                <div class="col-sm-8">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.price, 'Prix', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.price) }}

                <div class="col-sm-8">
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.available, 'Disponible', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.available) }}

                <div class="col-sm-8">
                    {{ form_widget(form.available, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.description) }}

                <div class="col-sm-8">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control ckeditor'}}) }}
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-8">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>


            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        {{ form(form)}}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/player_edit.js') }}" type="text/javascript"></script>
{% endblock %}