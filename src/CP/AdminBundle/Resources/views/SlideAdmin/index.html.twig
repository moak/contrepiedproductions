{% extends "::base_admin.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Liste des slides</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li class="active">Slides</li>
    </ol>


    <!-- Page Content -->
    <div class="container">
        <a href="{{ path('admin_slide_add')}}"><button class="btn btn-default btn-success">Ajouter un slide</button></a>
        <hr>
        {# form_start(form, {'action': path('coc_homepage'), 'method': 'GET'}) }} #}

        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

            {% if slides|length != 0 %}
                {% for slide in slides %}
                        <td><img height="150" width="400" src="{{ asset('uploads/' ~ slide.image.path) }}"></td>
                        <td>
                            <a href="{{ path('admin_slide_edit', { 'id': slide.id }) }}" class="btn btn-default btn-info">Editer</a>
                            <a href="{{ path('admin_slide_delete', { 'id': slide.id }) }}" class="btn btn-default btn-danger">Suppprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td>-</td>
                    <td>0 slide trouv√©</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <hr>


    </div>
    <!-- /.container -->

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
{% endblock %}