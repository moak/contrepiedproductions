{% extends "::base_admin.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editer un slide</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_slides') }}">Slides</a></li>
        <li class="active">Editer un slide</li>
    </ol>

    <div class="container">

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.published, 'Publi√©', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.published) }}

                <div class="col-sm-4">
                    {{ form_widget(form.published, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.image) }}

                <div class="col-sm-4">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>



            <div class="form-group">
                <label class="col-sm-3 control-label">Image actuelle</label>

                <div class="col-sm-4">
                    <img class="img-responsive img-full" src="{{ asset('uploads/' ~ slide.image.path) }}" alt="">
                </div>
            </div>




            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>


            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        {{ form(form)}}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/footable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/player_edit.js') }}" type="text/javascript"></script>
{% endblock %}