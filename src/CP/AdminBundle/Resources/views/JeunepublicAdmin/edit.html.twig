{% extends "::base_admin.html.twig" %}

 {% block title %}
     <title>Ajouter un spectacle jeune public</title>
 {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editer un spectacle jeune public</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_jeunepublics') }}">Jeune Public</a></li>
        <li class="active">Editer un spectacle jeune public</li>
    </ol>

    <div class="container">

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.title) }}

                <div class="col-sm-4">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.title_second, 'Titre 2', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.title_second) }}

                <div class="col-sm-4">
                    {{ form_widget(form.title_second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.published, 'Publié', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.published) }}

                <div class="col-sm-4">
                    {{ form_widget(form.published, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.agefrom, 'Age mini', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.agefrom) }}

                <div class="col-sm-4">
                    {{ form_widget(form.agefrom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.ageto, 'Age maxi', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.ageto) }}

                <div class="col-sm-4">
                    {{ form_widget(form.ageto, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Image actuelle</label>

                <div class="col-sm-4">
                    {%  if jeunepublic.image is defined %}
                        <img class="img-responsive img-full" src="{{ asset('uploads/' ~ jeunepublic.image.path) }}" alt="">
                    {% else %}
                        ldsfdsf
                    {% endif %}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.image) }}

                <div class="col-sm-4">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.duration, 'Durée (minutes)', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.duration) }}

                <div class="col-sm-4">
                    {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.description_short, 'Description courte', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.description_short) }}

                <div class="col-sm-8">
                    {{ form_widget(form.description_short, {'attr': {'class': 'form-control ckeditor'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>


            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        {{ form(form)}}
    </div>
{% endblock %}

