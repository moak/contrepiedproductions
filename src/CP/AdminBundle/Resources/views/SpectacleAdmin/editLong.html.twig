{% extends "::base_admin.html.twig" %}

 {% block title %}
     <title>Ajouter un spectacle</title>
 {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editer un spectacle </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_spectacles') }}">Spectacle</a></li>
        <li class="active">Editer un spectacle </li>
    </ol>

    <div class="container">

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.description_long, 'Description longue', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.description_long) }}

                <div class="col-sm-8">
                    {{ form_widget(form.description_long, {'attr': {'class': 'form-control ckeditor'}}) }}
                </div>
            </div>


            <div class="form-group">
                {{ form_label(form.video1, 'Vidéo 1', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.video1) }}

                <div class="col-sm-8">
                    {{ form_widget(form.video1, {'attr': {'class': 'form-control ckeditor'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.video2, 'Vidéo 2', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.video2) }}

                <div class="col-sm-8">
                    {{ form_widget(form.video2, {'attr': {'class': 'form-control ckeditor'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.video3, 'Vidéo 3', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.video3) }}

                <div class="col-sm-8">
                    {{ form_widget(form.video3, {'attr': {'class': 'form-control ckeditor'}}) }}
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>


            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        {{ form(form)}}
    </div>
{% endblock %}

