{% extends "::base_admin.html.twig" %}

 {% block title %}
     <title>Ajouter un spectacle jeune public</title>
 {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editer une image jeune public</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}"><p class="fa fa-home"></p> Dashboard</a></li>
        <li><a href="{{ path('admin_jeunepublicimages') }}">Image Jeune Public</a></li>
        <li class="active">Editer une image jeune public</li>
    </ol>

    <div class="container">

        <div class="well">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.file, 'Image', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.file) }}

                <div class="col-sm-8">
                    {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.jeunepublic, 'Spectacle jeune public', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.jeunepublic) }}

                <div class="col-sm-8">
                    {{ form_widget(form.jeunepublic, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <div class="form-group">
                <label class="col-sm-2 control-label">Image actuelle</label>

                <div class="col-sm-4">
                    <img class="img-responsive img-full" src="{{ asset('uploads/' ~ jeunepublicImage.path) }}" alt="">
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-8">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>


            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        {{ form(form)}}
    </div>
{% endblock %}

